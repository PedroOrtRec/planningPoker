{
  "name": "PlanningPoker",
  "version": "1.5.2",
  "description": "develop version dated on 2020/09/29",
  "main": "index.js",
  "scripts": {
    "archetype": "tar -cvzf ${npm_package_name}.tgz --exclude='node_modules' --exclude='package-lock.json' --exclude='dist' *",
    "build": "npm i && tsc",
    "build-local": "cp env/.env ./env/.env && npm run build",
    "doc": "jscpd ",
    "test": "jest",
    "lint": "eslint 'src/**/*'",
    "start": "node ./dist/index.js",
    "start:develop": "node --inspect=5859 -r ts-node/register src/index.ts",
    "start:qa": "node --inspect=5858 -r ts-node/register src/index.ts ENV=qa",
    "start:staging": "node --inspect=5858 -r ts-node/register src/index.ts ENV=staging",
    "start:watch": "nodemon",
    "start:debug": "nodemon --inspect=5858 --config nodemon-debug.json",
    "preinstall": "echo \"\\x1b[32m[Emergya Preinstall Clear Cache NPM]\" && npm cache clean --force",
    "pre-deploy": "./node_modules/typescript/bin/tsc"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.1.0",
    "@fastify/multipart": "^7.2.0",
    "dotenv": "^8.2.0",
    "express-pino-logger": "^4.0.0",
    "fastify": "4.9.2",
    "moment": "^2.29.4",
    "socket.io": "^4.6.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^16.11.41",
    "@types/supertest": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.18.2",
    "faker": "^5.1.0",
    "husky": "^3.0.5",
    "jest": "^28.1.1",
    "jscpd": "^3.4.5",
    "nodemon": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:develop",
    "ext": "ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "jscpd": {
    "mode": "mild",
    "reporters": [
      "console",
      "time"
    ],
    "ignore": [
      "**/__tests__/**",
      "doc",
      "dist",
      "example"
    ],
    "absolute": true,
    "gitignore": true
  }
}
